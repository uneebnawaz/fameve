<%= stylesheet_link_tag 'dashboard' %>
<!--Main Navigation-->
<header>
  <%= render partial: 'layouts/admin_header'%>  
</header>
<!--Main Navigation-->

<!--Main layout-->
<main style="margin-top: 58px;">
    <div class="container pt-4">
        <h2>Manage Queries</h2><br>
        <% if @contacts.any? %>
        <div>
          <table class="table">
            <thead class = "text-dark">
              <tr>
                <th><%= "Name" %></th>
                <th><%= "Phone" %></th>
                <th><%= "Email" %></th>
                <th><%= "Subject" %></th>
                <th><%= "Description" %></th>
                <th><%= "Actions" %></th>
              </tr>
            </thead>
            <% @contacts.each do |contact|%>
            <tbody>
              <tr>
                <td class=""><%= contact.name %></td>
                <td class=""><%= contact.phone %></td>
                <td class=""><%= contact.email %></td>
                <td class=""><%= contact.subject %></td>
                <td class=""><%= contact.description %></td>
                <td>
                  <%= link_to ('<i class="fa-solid fa-trash" style="color:gray"></i>').html_safe, admin_contact_u_path(contact), method: :delete, data: { confirm: 'Are you sure?' } %>
                  <%= link_to ('<i class="fa-sharp fa-solid fa-eye" style="color:gray"></i>').html_safe, admin_contact_u_path(contact) %>
                </td>
              </tr>
            </tbody>
            <% end %>
          </table>
        </div>
      <% else %>
        <br><h5><%= "No Data" %></h5>
      <% end %>
    </div>
</main>
<!--Main layout-->