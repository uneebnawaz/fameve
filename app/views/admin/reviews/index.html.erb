<div class="wrapper d-flex align-items-stretch">
  <%= stylesheet_link_tag 'seller_style' %>
  <%= render partial: 'layouts/admin_header'%>
    <!-- Page Content  -->
  <div id="content" class="p-4 p-md-5">
    <div class="container-fluid">
        <h2><strong>Validate Reviews<strong></h2><br>
      <% if @reviews.any? %>
        <div id="auto_update">
          <table class="table">
            <thead class = "text-dark">
              <tr>
                <th><%= "Service Name" %></th>
                <th><%= "Posted by user" %></th>
                <th><%= "Review" %></th>
                <th><%= "status" %></th>
                <th><%= "change status" %></th>
              </tr>
            </thead>
            <% @reviews.each do |review|%>
            <tbody>
              <tr>
                <td class=""><%= review.service.tittle %></td>
                <td class=""><%= review.user.fname %></td>
                <td class=""><%= review.description %></td>
                <td class=""><%= review.status %></td>
                <td>
                  <%= check_box_tag 'Allow', review.id, review.status,
                  data: {
                    remote: true,
                    url: admin_review_path(review),
                    method: "PATCH",
                    type: "json",
                  } %>
                </td>
              </tr>
            </tbody>
            <% end %>
          </table>
        </div>
      <% else %>
        <h2><%= "No Data" %></h2>
      <% end %>
    </div>
  </div>
</div>

