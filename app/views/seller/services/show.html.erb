      </ul>
    </div>
    <!-- Container wrapper -->
  </nav>
  <!-- Navbar -->
</header>
<!--Main Navigation-->

<!--Main layout-->
<main style="margin-top: 58px;">
  <div class="container pt-4">
    <h2>Show Service</h2><br>
     <div class="container">
      <div class="row align-items-center">
        <div class="col-4">
          <div class="d-flex justify-content-center">
            <%= image_tag @service.image, style: "width:200px" %>
          </div>
        </div>
        <div class="col-4">
          <h5><b>Tittle:&nbsp;&nbsp;</b><%= @service.tittle %><h5>
          <h5><b>Description:&nbsp;&nbsp;</b><%= @service.description %><h5>
          <h5><b>Category:&nbsp;&nbsp;</b><%= @service.category %><h5>
          <h5><b>Price:&nbsp;&nbsp;</b><%= @service.price %><h5>
          <h5><b>Portfolio:&nbsp;&nbsp;</b><%= link_to "Portfolio", "http://#{@service.portfolio}", :target => "_blank", rel: "alternate" %><h5>
            <button onclick="myFunction()" class= "btn btn-primary">Booking</button>
            <div id="myDIV" class="toshow" style="display:none">
            <%= form_for @booking, url: seller_bookings_path do |f| %>
          <br><%= f.date_field :event_date, placeholder: 'Event Date', class: "form-control", required: true %>
              <%= f.text_field :city, placeholder: 'City', class: "form-control", required: true %>
              <%= f.text_field :address, placeholder: 'Address', class: "form-control", required: true %>
              <%= f.text_field :phone, placeholder: 'Phone', class: "form-control", required: true %>
              <%= f.text_area :description, placeholder: 'Describe your event', class: "form-control", required: true %> <br>
              <%= f.hidden_field :user_id, :value => current_user.id, required: true %>
              <%= f.hidden_field :service_id, :value => @service.id, required: true %>
              <%= f.submit "Submit", class: "btn btn-success" %>
            <% end %>
            </div>                    
        </div>
      </div>
    </div>
  </div>
</main>
<!--Main layout-->

<script>
function myFunction() {
  var x = document.getElementById("myDIV");
  if (x.style.display === "none") {
    x.style.display = "block";
  } else {
    x.style.display = "none";
  }
}
</script>
