<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
       <p class="h1 fw-bold">Sign In</p><br>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        
          <!-- Email input -->
          <div class="form-outline mb-4">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "form1Example13", class: "form-control form-control-lg" %>
            <label class="form-label" for="form1Example13">Email address</label>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">
            <%= f.password_field :password, autocomplete: "current-password", id: "form1Example23", class: "form-control form-control-lg" %>
            <label class="form-label" for="form1Example23">Password</label>
          </div>

          <div class="d-flex justify-content-around align-items-center mb-4">
            <!-- Checkbox -->
            <div class="form-check">
              <% if devise_mapping.rememberable? %>
                <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
                <label class="form-check-label" for="form1Example3"> Remember me </label>
              <% end %>
            </div>
            Don't have an account? <%= link_to "Register", new_registration_path(resource_name), class: "link-danger" %>
          </div>

          <!-- Submit button -->
          <%= f.submit "Log in", class: "btn btn-primary btn-lg"%>

        <% end %>
      </div>
    </div>
  </div>
</section>




